unconsciously = auto
full = 100%

style-content(type)
	justify-content type
	align-items type

style-fullscreen()
	height full
	width full


html 
	style-fullscreen()
	min-width 600px
body
	style-fullscreen()
	margin 0
	padding 0

.search-bar 
	width full
	display flex
	flex-direction row
	background-color grey
	padding 3px
	style-content(flex-end)
	& .bar 
		float right
		width 45%
	form
		& input 
			width full
		.lupa 
			text-align right
			padding-right 2%
			margin-left 1%


.menu 
	margin-bottom 1%
	.menu-items 
		background-color lightgray
		display grid
		grid-template-columns repeat(4, 1fr)
		align-items center
		.site-theme 
			display block
			font-size x-large
			font-weight bold
			width 100%
			padding 1%
			margin-right 3%
		.menu-item 
			display block
			font-size x-large
			font-weight bold
			width full
			padding 1%
			& a 
				text-align center
				text-decoration none
				color black
				font-size 20px
				&:hover 
					color red

.galery 
	display grid
	margin unconsciously
	width 80%
	height @margin
	grid-template-columns 1fr 2fr 1fr
	margin-bottom 2%
	width 50%
	margin-top 2px
	.galery-item 
		& img 
			width 100%
			height @width
.image-arc
	display block
	text-align: center
	margin auto
	margin-bottom 2%
	& img 
		width 50%
		border-radius 5%
.content 
	display grid
	grid-template-columns 1fr 1fr
	grid-auto-rows 1fr
	width 80%
	margin unconsciously
	margin-bottom 5%
	.contaner-heading 
		display block
		background-color white
		width 95%
		height full
		margin unconsciously
		padding @margin
		& img 
			display flex
			flex-direction column
			align-items center
			padding-top 1%
			border-radius 5%
			margin unconsciously
		.contaner-heading-img img 
			width 20%
		.contaner-heading-head 
			display flex
			flex-direction column
			align-items center
			padding-top 2%
			font-size x-large
			font-weight bold
		.contaner-heading-desc 
			display flex
			flex-direction column
			align-items center
			padding 2%
			padding-top 2%
			text-align justify
			font-size large

	.contaner-rows 
		display grid
		style-fullscreen()
		grid-template-columns 0.8fr 1.2fr
		row-gap 3%
		grid-template-rows repeat(4,0.6fr)
		.contaner-rows-item 
			background-color white
			height 100%
			.contaner-rows-item-img 
				display flex
				height 100%
				& img 
					display block
					width 100%
					height 100%
					border-radius 5%
					max-width 100%
					max-height 100px
			.contaner-rows-item-desc 
				padding-left 2%

.description-block
	display block
	text-align center
	border-radius 3%
	margin auto
	width 90%
	background-color lightgray

footer 
	display block
	overflow hidden
	padding 1%
	margin 0
	background-color gray
.author 
	float left
	font-size larger
.contacts 
	float right
	font-size larger

.tableBlock
	margin 10px
	padding 10px
	overflow auto

table
	border-collapse collapse
	width 95%
	text-align center
	margin auto

.options-block
	margin-left 5%
	margin-bottom 2%
	& form
		margin 1%


table, td, th
	border 1px solid 

@media (max-width 1400px)

	.menu 
		background-color whitesmoke
		.menu-items 
			display grid
			row-gap 4%
			column-gap 1.3%
			grid-template-columns repeat(2,1fr)
			grid-template-rows auto
			justify-content space-evenly
			background-color whitesmoke
			width 100%
			align-items center
			.site-theme 
				display none
				width 0
				height 0
			.menu-item 
				background-color lightgray
				text-align center
				width 100%
				padding 1%

	.options-block
		grid-template-rows repeat(3, min-content)
		grid-template-columns 1fr

	.galery 
		width 50%
		margin-top 2px
		display flex
		flex-direction column
		style-content(center);
		align-content center

	.content 
		margin-top 2px
		display flex
		flex-direction column
		width 50%
		style-content(center)
		.contaner-heading 
			display block
			background-color white
			width 95%
			height 100%
			justify-self flex-start
			margin-bottom 3%
		.contaner-rows 
			display grid
			width 95%
			height full
			grid-template-columns 0.8fr 1.2fr
			row-gap 3%
			grid-template-rows repeat(4,0.6fr)