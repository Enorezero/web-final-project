unconsciously = auto

html 
	height 100%
	width @height
body
	width 100%
	height @width
	margin 0
	padding 0
style-content(type)
	justify-content type
	align-items type

.search-bar 
	width 100%
	display flex
	flex-direction row
	background-color grey
	padding 3px
	style-content(flex-end)
	& .bar 
		float right
		width 45%
input 
	width 100%
.lupa 
	text-align right
	padding-right 2%
	margin-left 1%
.menu 
	margin-bottom 1%
.menu-item 
	display block
	font-size x-large
	font-weight bold
	width 15%
	padding 1%
	& a 
		text-align center
		text-decoration none
		color black
		font-size 20px
		&:hover 
			color red
.menu-items 
	background-color lightgray
	display flex
	align-items center

.site-theme 
	display block
	font-size x-large
	font-weight bold
	width 24%
	padding 1%
	margin-right 3%
.galery 
	display grid
	margin unconsciously
	width 80%
	height @margin
	grid-template-columns 1fr 2fr 1fr
	margin-bottom 2%
	width 50%
	margin-top 2px
	.galery-item 
		& img 
			width 100%
			height @width
.content 
	display grid
	grid-template-columns 1fr 1fr
	grid-auto-rows 1fr
	width 80%
	margin unconsciously
	margin-bottom 5%
	.contaner-heading 
		display block
		background-color white
		width 95%
		height 100%
		margin unconsciously
		padding @margin
		.contaner-heading-img img 
			width 20%
		.contaner-heading-head 
			display flex
			flex-direction column
			align-items center
			padding-top 2%
			font-size x-large
			font-weight bold
		.contaner-heading-desc 
			display flex
			flex-direction column
			align-items center
			padding 2%
			padding-top 2%
			text-align justify
			font-size large

	.contaner-rows 
		display grid
		width 100%
		height 100%
		grid-template-columns 0.8fr 1.2fr
		row-gap 3%
		grid-template-rows repeat(4,0.6fr)
		.contaner-rows-item 
			background-color white
			height 100%
			.contaner-rows-item-img 
				display flex
				height 100%
				& img 
					display block
					width 100%
					height 100%
					max-width 100%
					max-height 100px
			.contaner-rows-item-desc 
				padding-left 2%
.contaner-heading img 
	display flex
	flex-direction column
	align-items center
	padding-top 1%
	margin unconsciously
footer 
	display block
	overflow hidden
	padding 1%
	margin 0
	background-color gray
.author 
	float left
	font-size larger
.contacts 
	float right
	font-size larger

@media (max-width:1400px){

    .site-theme {
        display: none;
        width: 0;
        height:0;
    }

    .menu {
        background-color: whitesmoke;
    }

    .menu-items {
        display: grid;
        row-gap: 4%;
        column-gap: 1.3%;
        grid-template-columns: repeat(2,1fr);
        grid-template-rows: auto;
        justify-content: space-evenly;
        background-color: whitesmoke;
        width: 100%;
        align-items: center;
        
    }

    .menu-item {
        background-color: lightgray;
        text-align: center;
        width: 100%;
        padding: 1%;
    }

    .galery {
        width: 50%;
        margin-top: 2px;
        display: flex;
        flex-direction: column;
        style-content(center);
        align-content: center;
    }

    .content {
        margin-top: 2px;
        display: flex;
        flex-direction: column;
        width: 50%;
        style-content(center);
    }

    .contaner-heading {
        display: block;
        background-color: white;
        width: 95%;
        height: 100%;
        justify-self:flex-start;
        margin-bottom: 3%;
    }

    .contaner-rows {
        display: grid;
        width: 95%;
        height: 100%;
        grid-template-columns: 0.8fr 1.2fr;
        row-gap: 3%;
        grid-template-rows: repeat(4,0.6fr);
    }
}